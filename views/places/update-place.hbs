<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>EDITA UN SITIO</h1>
            <hr>

            <form action="/places/{{_id}}/update" method="POST">
                <div class="mb-3 ">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="nameInput" name="name" value="{{name}}">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>
                <div class="mb-3 ">
                    <label class="form-label">Type</label>
                    <input type="text" class="form-control" id="typeInput" name="type" value="{{type}}">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>
                <div class="mb-3 ">
                    <label class="form-label">Latitude</label>
                    <input type="number" step="any" class="form-control" id="latInput" name="lat"
                        value="{{location.coordinates.[0]}}">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>
                <div class="mb-3 ">
                    <label class="form-label">Longitude</label>
                    <input type="number" step="any" class="form-control" id="lngInput" name="lng"
                        value="{{location.coordinates.[1]}}">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>

                <div class="d-grid gap-2 m-2">
                    <button type="submit" class="btn btn-dark block">UPDATE</button>
                </div>

            </form>
        </div>
    </div>

</div>