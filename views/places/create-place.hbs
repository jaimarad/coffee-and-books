<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>CREA UN SITIO</h1>
            <hr>

            <form action="/places/create" method="POST">

                <div class="mb-3 ">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" id="nameInput" name="name">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>
                <div class="mb-3 ">
                    <label class="form-label">Type</label>
                    <input type="text" class="form-control" id="typeInput" name="type">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>
                <div class="mb-3 ">
                    <label class="form-label">Latitude</label>
                    <input type="number" step="any" class="form-control" id="latInput" name="lat">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>
                <div class="mb-3 ">
                    <label class="form-label">Longitude</label>
                    <input type="number" step="any" class="form-control" id="lngInput" name="lng">
                    {{!-- <div class="form-text">Requerido.</div> --}}
                </div>

                <div class="d-grid gap-2 m-2">
                    <button type="submit" class="btn btn-dark block">CREATE</button>
                </div>

            </form>
        </div>
    </div>

</div>